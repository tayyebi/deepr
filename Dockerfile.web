# Build stage
FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src

# Copy solution and project files
COPY ["Deepr.sln", "./"]
COPY ["src/Deepr.Web/Deepr.Web.csproj", "src/Deepr.Web/"]

# Restore dependencies
RUN dotnet restore "src/Deepr.Web/Deepr.Web.csproj"

# Copy all source files
COPY . .

# Build and publish
WORKDIR "/src/src/Deepr.Web"
RUN dotnet publish "Deepr.Web.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS runtime
WORKDIR /app

COPY --from=build /app/publish .

EXPOSE 8081

ENTRYPOINT ["dotnet", "Deepr.Web.dll"]
