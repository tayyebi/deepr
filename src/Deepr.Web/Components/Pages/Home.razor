@page "/"
@rendermode InteractiveServer
@inject DeeprApiClient Api
@inject NavigationManager Nav

<PageTitle>Deepr â€” Issues</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>ðŸ§  Decision Issues</h1>
    <a href="issues/templates" class="btn btn-primary">+ New Issue</a>
</div>

@if (_loading)
{
    <p><em>Loading...</em></p>
}
else if (_issues is null || !_issues.Any())
{
    <div class="alert alert-info">
        No issues yet. <a href="issues/templates">Create your first issue</a> to get started.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-3">
        @foreach (var issue in _issues)
        {
            <div class="col">
                <div class="card h-100 @(issue.IsArchived ? "opacity-50" : "")">
                    <div class="card-body">
                        <h5 class="card-title">@issue.Title</h5>
                        <p class="card-text text-muted small">@issue.ContextVector</p>
                        <p class="card-text"><small class="text-muted">Created @issue.CreatedAt.ToString("MMM d, yyyy")</small></p>
                    </div>
                    <div class="card-footer">
                        <a href="issues/@issue.Id" class="btn btn-sm btn-outline-primary">View Details â†’</a>
                        @if (issue.IsArchived)
                        {
                            <span class="badge bg-secondary ms-2">Archived</span>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (_error is not null)
{
    <div class="alert alert-danger mt-3">@_error</div>
}

@code {
    private List<IssueDto>? _issues;
    private bool _loading = true;
    private string? _error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _issues = await Api.GetIssuesAsync();
        }
        catch (Exception ex)
        {
            _error = $"Could not load issues: {ex.Message}";
        }
        finally
        {
            _loading = false;
        }
    }
}
